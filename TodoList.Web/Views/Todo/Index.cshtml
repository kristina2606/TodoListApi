@model IEnumerable<Todo>

@{
    var status = Context.Request.Query["status"];
    string defaultClass = "bg-body-tertiary";
    string selectedClass = "active text-white bg-primary";
}

<partial name="_Notification" />

    <div class="card border-0">
        <div class="card-body bg-body-tertiary">
            <h1 class="card-title text-center text-black fw-bold">My Todos</h1>
            <div class="row pt-4 pb-2">
                <div class="col-6 d-flex">
                    <ul class="list-group list-group-horizontal-sm">
                    <li class="list-group-item  @(status == "Active"  ? selectedClass : defaultClass)">
                            <a asp-controller="Todo" asp-action="Index" asp-route-status="Active" class="text-decoration-none text-dark">All</a>
                        </li>
                    <li class="list-group-item @(status == "Todo" ? selectedClass : defaultClass)">
                            <a asp-controller="Todo" asp-action="Index" asp-route-status="Todo" class="text-decoration-none text-dark">Todo</a>
                        </li>
                    <li class="list-group-item @(status == "InProgress" ? selectedClass : defaultClass)">
                            <a asp-controller="Todo" asp-action="Index" asp-route-status="InProgress" class="text-decoration-none text-dark">In Progress</a>
                        </li>
                    <li class="list-group-item @(status == "Completed" ? selectedClass : defaultClass)">
                            <a asp-controller="Todo" asp-action="Index" asp-route-status="Completed" class="text-decoration-none text-dark">Completed</a>
                        </li>
                    </ul>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Todo" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Add new task
                    </a>
                </div>
            </div>

            <table class="table table-hover mt-0">
                <thead>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <partial name="_TaskPartial" model="task" />
                    }
                </tbody>
            </table>
        </div>
    </div>
