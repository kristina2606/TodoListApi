@model TodoDetailedViewModel

<partial name="_Notification" />
<form method="post">
     <input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4 col-8 mx-auto">
        <div class="row">
            <div class="col pb-4 text-center">
                <h2><strong>Edit task</strong></h2>
            </div>
        </div>
        <div class="form-floating py-2">
            <input asp-for="Title" class="form-control" />
            <label asp-for="Title" class="mt-2"></label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-floating py-2">
            <textarea asp-for="Description" class="form-control" style="height: 200px;"></textarea>
            <label asp-for="Description" class="mt-2"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <div class="col-auto ">
                <button type="submit" formaction=@Url.Action("Delete", new { todoId = Model.Id }) class="btn btn-outline-danger">
                    <i class="bi bi-trash3-fill"></i>
                </button>
            </div>
            <div class="col">
                <div class="row justify-content-lg-end">
                    <div class="col-3">
                        <button type="submit" formaction=@Url.Action("Update") class="btn btn-outline-primary form-control">
                            Save
                        </button>
                    </div>
                    <div class="col-3 ">
                        <a asp-controller="Todo" asp-action="Index" class="btn btn-dark form-control">
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



